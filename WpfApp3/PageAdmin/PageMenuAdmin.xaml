<Page x:Class="WpfApp3.PageAdmin.PageMenuAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp3.PageAdmin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageMenuAdmin">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <WrapPanel  Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Страница предмета" HorizontalAlignment="Center" Margin="5"></TextBlock>
                <Button Content="Перейти" Click="BtnPageItem_Click" Width="100" Height="30" Margin="5"></Button>
            </WrapPanel>
        </Grid>
        <Button Content="Выйти" Click="BtnExit_Click" Width="100" Height="30" Grid.Row="1"></Button>
    </Grid>
</Page>
